{
  "name": "storeon-observable",
  "version": "0.3.1",
  "description": "RxJS based module for Storeon which allows to create async actions",
  "main": "index.js",
  "module": "module/index.js",
  "typings": "index.d.ts",
  "sideEffects": "false",
  "files": [
    "module",
    "index.js",
    "index.js.map",
    "index.d.ts"
  ],
  "repository": "git@github.com:distolma/storeon-observable.git",
  "author": "Dmytro Mostovyi <djmakaron2009@gmail.com>",
  "contributors": [
    "Dmytro Mostovyi <djmakaron2009@gmail.com>",
    "Pawe≈Ç Majewski <majo44@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "compile": "tsc && tsc -p tsconfig.module.json",
    "doc": "typedoc --out doc --theme minimal",
    "build": "yarn run lint && yarn run test && yarn run compile && yarn run size && yarn run doc",
    "size": "size-limit",
    "lint": "eslint index.ts",
    "test": "jest --coverage",
    "prepublish": "yarn build"
  },
  "peerDependencies": {
    "rxjs": ">=6.0.0-beta.0 <7",
    "storeon": "^2.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "36.1.2",
    "@size-limit/preset-small-lib": "^4.4.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "17.2.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "size-limit": "^4.4.2",
    "storeon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "360 B"
    },
    {
      "path": "module/index.js",
      "limit": "400 B"
    }
  ],
  "eslintConfig": {
    "extends": [
      "@logux/eslint-config",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "multiline-ternary": "off",
      "node/no-extraneous-require": "off",
      "prefer-let/prefer-let": "off",
      "func-style": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
