{
  "name": "storeon-observable",
  "version": "0.3.0",
  "description": "RxJS based module for Storeon which allows to create async actions",
  "main": "index.js",
  "module": "module/index.js",
  "typings": "index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:distolma/storeon-observable.git",
  "author": "Dmytro Mostovyi <djmakaron2009@gmail.com>",
  "contributors": [
    "Dmytro Mostovyi <djmakaron2009@gmail.com>",
    "Pawe≈Ç Majewski <majo44@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "compile": "tsc && tsc -p tsconfig.module.json",
    "build": "yarn run lint && yarn run test && yarn run compile && yarn run size",
    "size": "size-limit",
    "lint": "eslint index.ts",
    "test": "jest --coverage"
  },
  "peerDependencies": {
    "rxjs": ">=6.0.0-beta.0 <7",
    "storeon": "^1.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^36.0.0",
    "@size-limit/preset-small-lib": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.7",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "size-limit": "^4.0.2",
    "storeon": "^1.0.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "index.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "600 B"
    }
  ],
  "eslintConfig": {
    "extends": [
      "@logux/eslint-config",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "node/no-extraneous-require": "off",
      "prefer-let/prefer-let": "off",
      "func-style": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
